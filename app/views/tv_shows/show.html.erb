<div class="header">

   <div class="pull-right">
      <%= link_to 'Back to Shows', tv_shows_path, class: 'btn btn-info' %>
      <% if current_user == nil || current_user.admin == true %>
        <%= link_to 'Edit Show', edit_tv_show_path(@tvshow), class: 'btn btn-primary' %>
        <%= link_to 'Delete Show', tv_show_path(@tvshow), method: :delete, class: 'btn btn-danger' %>
      <% end %>
      </div>


      <h1><b><%= @tvshow.title %></b></h1>
      <h3><p><%= @tvshow.genre.name %></h3>
      </div>


      <p><%= link_to 'Create Review', new_tv_show_tv_show_review_path(@tvshow), class: 'btn btn-success' %>

         <div class="col-md-8 pull-right">
            <% @tvreviews.each do |tvreview| %>
            <div class="col-md-6">
               <div class="panel panel-primary">
                  <div class="panel-heading">
                    <h3 class="panel-title"><%= tvreview.tv_show.title %>
                      <% tvreview.rating.times do %>
                      <div class="pull-right">
                        <span class="glyphicon glyphicon-star" aria-hidden="true" style="padding-right: 6px; left: 10px"></span>
                        <% end %>
                      </div>
                    </h3>
                  </div>
                  <div class="panel-body">
                     <%= link_to tvreview.review, tv_show_tv_show_review_path(@tvshow, tvreview) %>
                     <p><em>-<%= tvreview.user.username %></em>
                     </div>
                  </div>
               </div>
               <% end %>
            </div>
