<%= form_for(@tvshow, html: {:class => "form-horizontal"}) do |f| %>

  <% if @tvshow.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= pluralize(@tvshow.errors.count, "error") %> prohibited this TV show from being saved:</h2>
    <ul>
      <% @tvshow.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<div class="form-group">
  <div class="field">
    <%= f.label :title, :class => 'control-label col-md-2' %>
    <div class='form-controls col-md-4'>
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label :genre, :class => 'control-label col-md-2' %>
  <div class='form-controls col-md-4'>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: 'pick a genre'}, {class: "form-control"} %>
  </div>
  </div>
</div>

<div class="form-group">
  <div class="col-md-offset-2 col-md-4">
    <%= f.submit :class => 'btn btn-primary' %>
    <%= link_to 'cancel', root_url, class: 'btn btn-default'%>
  </div>
</div>

<% end %>
