<div class="col-md-4">
  <%= link_to 'New Show', new_tv_show_path, class: 'btn btn-default pull-right btn-sm', id: 'new-show' %>
  <h3>TV Shows</h3>
    <ul class="list-group">
      <% @tvshows.each do |tvshow| %>
      <li class="list-group-item">
        <span class="badge">Reviews:<%= tvshow.tv_show_reviews.count %></span>
        <%= link_to "#{tvshow.title} | #{tvshow.genre}", tv_show_path(tvshow) %>
      </li>
      <% end %>
    </ul>
</div>


<div class="col-md-4">
  <% @tvreviews.each do |tvreview| %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= tvreview.tv_show.title %></h3>
      </div>
      <div class="panel-body">
        <%= tvreview.review %>
        <%= tvreview.rating %>
      </div>

</div>
<% end %>
