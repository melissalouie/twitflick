<%= form_for(@user, html: {:class => "form-horizontal"}) do |f| %>

  <% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<div class="form-group">
  <div class="field">
    <%= f.label :username, :class => 'control-label col-md-2' %>

    <div class='form-controls col-md-4'>
      <%= f.text_field :username, :class => 'form-control' %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label :email, :class => 'control-label col-md-2' %>

    <div class='form-controls col-md-4'>
      <%= f.email_field :email, :class => 'form-control' %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label 'About Me', :class => 'control-label col-md-2' %>

    <div class='form-controls col-md-4'>
      <%= f.text_field :bio, :class => 'form-control' %>
    </div>
  </div>
</div>

<div class="form-group">
   <div class="field">
     <%= f.label :password, :class => 'control-label col-md-2' %>

     <div class='form-controls col-md-4'>
       <%= f.password_field :password, :class => 'form-control' %>
     </div>
   </div>
 </div>

 <div class="form-group">
   <div class="field">
     <%= f.label :password_confirmation, :class => 'control-label col-md-2' %>

     <div class='form-controls col-md-4'>
       <%= f.password_field :password_confirmation, :class => 'form-control' %>
     </div>
   </div>
 </div>

 <div class="form-group">
    <div class="field">
      <%= f.label :admin, :class => 'control-label col-md-2' %>

      <div class='form-controls col-md-4'>
        <%= f.check_box :admin, :class => 'form-control' %>
      </div>
    </div>
  </div>

<div class="form-group">
  <div class="col-md-offset-2 col-md-4">
    <%= f.submit @submit_name, :class => 'btn btn-primary'%>
    <% unless @user.id == nil %>
      <%= link_to 'Delete', user_path, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
    <% end %>
    <%= link_to 'cancel', users_path, class: 'btn btn-default'%>
  </div>
</div>



<% end %>
